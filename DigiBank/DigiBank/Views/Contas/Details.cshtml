@model Conta

@{
    ViewData["Title"] = "Detalhes da Conta";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Número da Conta</dt>
        <dd class="col-sm-9">@Model.Numero</dd>

        <dt class="col-sm-3">Tipo</dt>
        <dd class="col-sm-9">@Model.Tipo</dd>

        <dt class="col-sm-3">Saldo</dt>
        <dd class="col-sm-9">@Model.Saldo.ToString("C")</dd>

        <dt class="col-sm-3">Cliente</dt>
        <dd class="col-sm-9">@Model.Cliente.Nome</dd>

        <dt class="col-sm-3">CPF</dt>
        <dd class="col-sm-9">@FormatarCPF(Model.Cliente.CPF)</dd>

        <dt class="col-sm-3">Data de Abertura</dt>
        <dd class="col-sm-9">@Model.DataAbertura.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Deposito" asp-route-numeroConta="@Model.Numero" class="btn btn-success">Depósito</a>
    <a asp-action="Saque" asp-route-numeroConta="@Model.Numero" class="btn btn-warning">Saque</a>
    <a asp-action="Extrato" asp-route-numeroConta="@Model.Numero" class="btn btn-info">Extrato</a>
    <a asp-action="Index" asp-route-clienteId="@Model.ClienteId" class="btn btn-secondary">Voltar</a>
</div>

@functions {
    public string FormatarCPF(string cpf)
    {
        return Convert.ToUInt64(cpf).ToString(@"000\.000\.000\-00");
    }
}