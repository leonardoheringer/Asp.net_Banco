@model IEnumerable<Banco.Models.ViewModels.TransactionViewModel>

@{
    ViewData["Title"] = "Histórico de Transações";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    
    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
            <tr>
                <th>Data</th>
                <th>Descrição</th>
                <th>Valor</th>
                <th>Tipo</th>
                <th>Detalhes</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Description</td>
                    <td class="@(item.Amount > 0 ? "text-success" : "text-danger")">
                        @item.Amount.ToString("C")
                    </td>
                    <td>@item.Type</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FromAccount))
                        {
                            <span>De: @item.FromAccount</span><br />
                        }
                        @if (!string.IsNullOrEmpty(item.ToAccount))
                        {
                            <span>Para: @item.ToAccount</span>
                        }
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
    <div class="mt-3">
        <a asp-action="Transfer" class="btn btn-primary">Nova Transferência</a>
        <a asp-action="Deposit" class="btn btn-success">Novo Depósito</a>
        <a asp-controller="Account" asp-action="Dashboard" class="btn btn-secondary">Voltar</a>
    </div>
</div>