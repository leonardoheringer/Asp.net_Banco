@{
    ViewData["Title"] = "Página Inicial";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo ao Banco Digital</h1>
    <p class="lead">Sua solução completa para operações bancárias online</p>
    
    <div class="mt-5">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg mr-3">Login</a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-success btn-lg">Cadastre-se</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Dashboard" class="btn btn-primary btn-lg">Acessar Minha Conta</a>
        }
    </div>
</div>